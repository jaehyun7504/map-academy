<%- include('includes/head.ejs') %>
  </head>
  <body>
    <form
      class="container"
      action="http://127.0.0.1:5000/api/new-password"
      method="POST"
    >
      <input
        class="container__input"
        name="password"
        type="password"
        placeholder="새로운 비밀번호를 입력하세요."
      />
      <input type="hidden" name="userId" value="<%= userId %>" />
      <input type="hidden" name="passwordToken" value="<%= passwordToken %>" />
      <!-- CSRF -->
      <button class="container__button" type="submit">확인</button>
    </form>
  </body>
</html>